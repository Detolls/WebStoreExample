@model WebStore.Models.EmployeeViewModel

@{ 
    Layout = "_Layout";
}

<h3>Сотрудник</h3>
<hr />
<table class="table table-bordered">
    <tr>
        <th>Surname</th>
        <td>@Model.SurName</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>Patronymic</th>
        <td>@Model.Patronymic</td>
    </tr>
    <tr>
        <th>Position</th>
        <td>@Model.Position</td>
    </tr>
    <tr>
        <th>Birthday</th>
        <td>@Model.Birthday.ToString("dd/MM/yyyy")</td>
    </tr>
</table>
<hr />
<a asp-controller="Employee" asp-action="Employees">Back</a>
