@model WebStore.Models.Account.LoginUserViewModel
@{
    ViewData["Title"] = "Login";
}
<section id="form">
    <!--form-->
    <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
            <div class="signup-form">
                <!--sign up form-->
                <h2>Sign in</h2>
                <form asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="UserName" placeholder="@nameof(Model.UserName)" />
                    <input asp-for="Password" placeholder="@nameof(Model.Password)" />
                    <label>Remember me</label><br />
                    <input asp-for="RememberMe"/>
                    <button type="submit" class="btn btn-default">Sign up</button>
                </form>
            </div><!--/sign up form-->
        </div>
    </div>
</section>