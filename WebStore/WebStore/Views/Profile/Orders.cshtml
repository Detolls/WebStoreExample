@using System.Globalization

@model List<WebStore.Models.Order.UserOrderViewModel>

@{
    ViewBag.Title = "My orders";
    Layout = "_ProfileLayout";
}

<h2>@ViewBag.Title</h2>

<table class="table table-hover">
    <tr>
        <th>
            Number
        </th>
        <th>
            Name
        </th>
        <th>
            Address
        </th>
        <th>
            Phone
        </th>
        <th>
            Order price
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@item.Phone</td>
            <td>@item.TotalSum.ToString("C", new CultureInfo("en-US"))</td>
        </tr>
    }
</table>
